{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "patternProperties": {
        "^[A-Z]+(-[0-9]+)+$": {
            "type": "object",
            "properties": {
                "condition": {
                    "type": "object",
                    "patternProperties": {
                        ".*": {
                            "type": "object",
                            "properties": {
                                "cost": {
                                    "type": "object",
                                    "properties": {
                                        "paper": {
                                            "type": "object",
                                            "properties": {
                                                "amount": {
                                                    "type": "integer"
                                                },
                                                "description": {
                                                    "type": "string"
                                                }
                                            },
                                            "required": [
                                                "amount",
                                                "description"
                                            ]
                                        },
                                        "online": {
                                            "type": "object",
                                            "properties": {
                                                "amount": {
                                                    "type": "integer"
                                                },
                                                "description": {
                                                    "type": "string"
                                                }
                                            },
                                            "required": [
                                                "amount",
                                                "description"
                                            ]
                                        }
                                    },
                                    "required": [
                                        "paper",
                                        "online"
                                    ]
                                }
                            },
                            "required": [
                                "cost"
                            ]
                        }
                    }
                },
                "additional": {
                    "type": "object",
                    "patternProperties": {
                        ".*": {
                            "type": "object",
                            "properties": {
                                "fee": {
                                    "type": "integer"
                                },
                                "description": {
                                    "type": "string"
                                }
                            },
                            "required": [
                                "fee",
                                "description"
                            ]
                        }
                    }
                }
            },
            "required": [
                "condition"
            ]
        }
    }
}