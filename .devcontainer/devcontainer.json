{
    "name": "Flutter Dev Container",
    "image": "jonathanortega2023/flutter_dev",
    "customizations": {
        "extensions": [
            "dart-code.dart-code",
            "dart-code.flutter"
        ]
    },
    "forwardPorts": [
        8080
    ],
    "postCreateCommand": "flutter doctor",
    // add "/usr/bin/android-sdk/platform-tools/adb" to the PATH
    "runArgs": [
        "--env",
        "PATH=${env:PATH}:/usr/bin/android-sdk/platform-tools"
    ]
}