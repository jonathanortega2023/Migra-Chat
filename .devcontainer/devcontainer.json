{
    "name": "MigraChat Dev Container",
    "image": "jonathanortega2023/flutter_dev:latest",
    "features": {
        "ghcr.io/devcontainers/features/python:1": {}
    },
    // TODO figure out why the fuck not working
    "customizations": {
        "vscode": {
            "settings": {
                "extensions.verifySignature": false
            },
            "extensions": [
                "ms-python.python",
                "ms-python.vscode-pylance",
                "ms-toolsai.jupyter"
            ]
        }
    },
    "postCreateCommand": "python -m venv .venv && .venv/bin/pip install -r requirements.txt",
    "postStartCommand": "adb start-server"
}