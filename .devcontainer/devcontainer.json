{
    "name": "Flutter Dev Container",
    "image": "jonathanortega2023/flutter_dev",
    "customizations": {
        "extensions": [
            "dart-code.dart-code",
            "dart-code.flutter",
            "ms-toolsai.jupyter",
            "ms-python.python"
        ]
    },
    // add "/usr/bin/android-sdk/platform-tools/adb" to the PATH
    "runArgs": [
        "--env",
        "PATH=${env:PATH}:/usr/lib/android-sdk/platform-tools"
    ]
}